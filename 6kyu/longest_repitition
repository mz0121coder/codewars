function longestRepetition(s) {
	let result = s[0];
	let count = 0;
	for (i = 0; i < s.length; i++) {
		let current = 1;
		for (let j = i + 1; j < s.length; j++) {
			if (s[i] !== s[j]) break;
			current++;
		}
		if (current > count) {
			count = current;
			result = s[i];
		}
	}
	return result === undefined ? ['', 0] : [result, count];
}
// Driver code
console.log(longestRepetition('bbbaaabaaaa'));
console.log(longestRepetition('s'));
